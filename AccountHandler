public class AccountHandler {
    public static void createTwoContacts(List<Account> acc) {
        //for bulkification
        List<Contact> contactList = new List<Contact>();

        //logic for every account that will be created
        for(Account newAccount : acc){
            //logic that will create 2 duplicate contacts
            for(Integer x = 1; x <= 2; x++){
                Contact newContact   = new Contact();
                newContact.FirstName = 'Siamese';
                newContact.LastName  = 'Twins';
                newContact.AccountId = newAccount.Id;
                contactList.add(newContact);
                System.debug('Contact record created: ' + newContact.FirstName + ' ' + newContact.LastName + '\n' +
                             'Contact # ' + x
                );
            }
            insert contactList;
        }
    }

    public static void createTenOpportunities(List<Account> acc){
        //for bulkification
        List<Opportunity> oppyList = new List<opportunity>();

        //logic for every account thats will be created
        for(Account newAccount : acc){
            //logic that will create 10 duplicate opportunities  employees is more than 99
            if(newAccount.NumberOfEmployees > 99){
                //logic for creation of the 10 oppys
                Date oppyCloseDate = Date.newInstance(newAccount.CreatedDate.year(), newAccount.CreatedDate.month(), newAccount.CreatedDate.day());
                for(Integer x = 1; x <= 10; x++){
                    Opportunity newOpportunity = new Opportunity();
                    newOpportunity.Name        = 'Multiple Oppys';
                    newOpportunity.CloseDate   = oppyCloseDate + 10;
                    newOpportunity.StageName   = 'Prospecting';
                    newOpportunity.AccountId   = newAccount.Id;

                    oppyList.add(newOpportunity);

                    System.debug('Oppy record created: ' + newOpportunity.Name + '\n' +
                                'Oppy #:' + x
                    );
                }
                insert oppyList;
            }
        }
    }
}
